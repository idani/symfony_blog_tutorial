{# app/Resources/views/blog/new.html.twig #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block page_title '新規作成' %}

{% block content %}
	{# {{ form(form) }} #}

	{{ form_start(form) }}
	{# {{ form_errors(form) }} #}

	{{ form_row(form.title, {'label': 'タイトル'}) }}
	{{ form_row(form.content, {'label': '本文'}) }}

	{% if post.id %}
		{{ form_row(form.save, { 'label': '編集する' }) }}
	{% else %}
		{{ form_row(form.save, { 'label': '作成する' }) }}
	{% endif %}
	{{ form_end(form) }}


{% endblock content %}
